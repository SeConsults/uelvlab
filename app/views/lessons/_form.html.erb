<% if @lesson.errors.any? %>
 <ul>
  <% @lesson.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>

<%= form_for @lesson do |f| %>

<p>
  <%= f.label :title %></br>
  <%= f.text_field :title %>
  <p>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </p>
</p>
<p>
  <%= f.submit %>
 </p>
<% end %>

<%= link_to "Back to lessons", lessons_path %>