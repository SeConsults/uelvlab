<% if @vlab.errors.any? %>

 <ul>
  <% @vlab.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>

<%= form_for @vlab do |f| %>

<p>
  <%= f.label :title %></br>
  <%= f.text_field :title %>
  <p>
    <%= f.label :instruction %></br>
    <%= f.text_area :instruction %>
    <p>
      <%= f.label :logfile %></br>
      <%= f.text_area :logfile %>
    </p>
  </p>
</p>
<p>
  <%= f.submit %>
 </p>
<% end %>

<%= link_to "Back to lab", vlabs_path %>